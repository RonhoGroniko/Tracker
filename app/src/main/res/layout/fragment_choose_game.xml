<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_gray"
    tools:context=".ui.ChooseGameFragment"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:id="@+id/card_pubg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="45dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tv_pubg"
                style="@style/ItemGameStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:text="@string/pubg" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/card_valorant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="45dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tv_valorant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ItemGameStyle"
                android:text="@string/valorant"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/card_marvel_rivals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="45dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tv_marvel_rivals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ItemGameStyle"
                android:text="@string/marvel_rivals"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
